
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <Button
        android:id = "@+id/start_bt" android:text = "@string/Record_Start"
        android:textColor = "#DC143C" android:textStyle = "bold"
        android:layout_width = "wrap_content" android:layout_height = "wrap_content"/>
    <Button
        android:id = "@+id/end_bt" android:text = "@string/Record_Stop"
        android:textColor = "#00008B" android:textStyle = "bold"
        android:layout_width = "wrap_content" android:layout_height = "wrap_content"/>
    <Button
        android:id = "@+id/play_bt" android:text = "@string/Play_Record"
        android:textStyle =  "bold"
        android:layout_width = "wrap_content" android:layout_height = "wrap_content"/>
</LinearLayout>